@{
    ViewData["Title"] = "aNerMe - Business Login";
}
@model Administrator
<partial name="_CustomerHeaderNavPartial" />
<div class="filler"></div>

<section class="login-a">
    <div class="container">
        <div class="login-card">
            <h1>Business Login</h1>
            <p id="error-message">@ViewBag.LoginError</p>
            <form asp-area="" asp-controller="Home" asp-action="LoginBusiness" method="POST">
                <div class="form-control">
                    <input type="text" asp-for="@Model.AdministratorName" required>
                    <label>Admin Username</label>
                </div>
                <div class="form-control">
                    <input type="password" asp-for="@Model.Password" required>
                    <label>Password</label>
                </div>
                <input type="hidden" asp-for="@Model.UserID" value="@Model.UserID">
                <button class="btn">Login</button>
                <p class="text">Don't have an account?
                    <a asp-area="" asp-controller="Home" asp-action="RegisterNewBusiness">Register</a>
                </p>
            </form>
        </div>
    </div>
</section>


<script src="~/js/loginAnimation.js" asp-append-version="true"></script>